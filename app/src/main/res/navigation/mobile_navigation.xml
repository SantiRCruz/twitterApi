<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_users">

    <fragment
        android:id="@+id/navigation_users"
        android:name="com.santiago.twitterapplication.ui.users.UsersFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_users" />

    <fragment
        android:id="@+id/navigation_create"
        android:name="com.santiago.twitterapplication.ui.create.CreateFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_create" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.santiago.twitterapplication.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_actualizar"
        android:name="com.santiago.twitterapplication.ui.actualizar.ActualizarFragment"
        android:label="Actualizar"
        tools:layout="@layout/fragment_actualizar" />
</navigation>